{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "strict": true,
    "target": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "incremental": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "outDir": "dist"
  }
}